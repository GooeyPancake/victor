//
// PutDownDispatch_LookForFaceAndCube
// This behavior triggers when after Cozmo is put down (and played the appropriate reactions). It searches
// for faces and cubes so that a proper activity can be selected right after.
//
//
{
  "behaviorClass": "LookForFaceAndCube",
  "behaviorID": "PutDownDispatch_LookForFaceAndCube",
  
  // behavior configuration

  "bodyTurnSpeed_degPerSec": 180,
  "headTurnSpeed_degPerSec": 120,
  
  "face_headAngleAbsRangeMin_deg": 30,
  "face_headAngleAbsRangeMax_deg": 42,
  "face_bodyAngleRelRangeMin_deg": 10,
  "face_bodyAngleRelRangeMax_deg": 30,
  "face_sidePicks": 2,
  
  "cube_headAngleAbsRangeMin_rad": -5,
  "cube_headAngleAbsRangeMax_rad":  5,
  "cube_bodyAngleRelRangeMin_rad": 10,
  "cube_bodyAngleRelRangeMax_rad": 30,
  "cube_sidePicks": 1,

  // stop this behavior if a named face is seen (after turning towards it)
  "verifySeenFaces": true,
  "stopBehaviorOnAnyFace": false,
  "stopBehaviorOnNamedFace": true,
  
  "lookInPlaceAnimTrigger": "LookAround"
}
